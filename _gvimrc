"----------------------------------------
" 表示設定
"----------------------------------------
" ツールバーを非表示
set guioptions-=T
" コマンドラインの高さ
set cmdheight=2

set showtabline=2

" ColorScheme
set background=dark
colorscheme solarized

" Font
if has("win32") || has("win64")
set guifont=HackGen:h13:cDEFAULT guifontwide=HackGen:h13:cDEFAULT
endif

" IMEカーソル色
if has("multi_byte_ime")
	highlight Cursor   guifg=NONE guibg=Green
	highlight CursorIM guifg=NONE guibg=Purple
endif


